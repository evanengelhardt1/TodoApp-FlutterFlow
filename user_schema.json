{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/todo-app/user.schema.json",
    "title": "User",
    "description": "A user document in the users collection",
    "type": "object",
    "properties": {
      "uid": {
        "type": "string",
        "description": "Unique identifier for the user (Firebase Auth UID)"
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "User's email address"
      },
      "display_name": {
        "type": "string",
        "description": "User's display name"
      },
      "photo_url": {
        "type": "string",
        "format": "uri",
        "description": "URL to the user's profile photo"
      },
      "birthdate": {
        "type": "string",
        "format": "date-time",
        "description": "User's birthdate as an ISO 8601 timestamp"
      },
      "created_time": {
        "type": "string",
        "format": "date-time",
        "description": "Timestamp when the user account was created"
      }
    },
    "required": ["uid", "email", "display_name", "created_time"]
  }